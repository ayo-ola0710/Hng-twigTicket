{% extends "base.html.twig" %}
{% import 'components/button.html.twig' as ui %}
{% block title %}TicketDash{% endblock %}
{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-2xl shadow-lg">
    <form action="/" method="get" class="mb-4">
      {{ ui.button('Back', 'outline', 'w-20 px-6 cursor-pointer hover:scale-105') }}
    </form>

    <div class="flex items-center justify-center h-10">
      <div class="shrink-0 flex items-center">
        <svg
          class="h-8 w-8 text-blue-600"
          viewBox="0 0 24 24"
          fill="currentColor"
          aria-hidden="true"
        >
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
        </svg>
        <span class="ml-2 text-xl font-bold text-gray-900"> TicketDash </span>
      </div>
    </div>

    <div>
      <h2 class="text-center text-3xl font-extrabold text-gray-900">Welcome</h2>
      <h2 class="text-center text-gray-400">Create a new account to get started</h2>
    </div>

    <form id="signupForm" class="mt-8 space-y-6" novalidate>
      <div class="rounded-md space-y-4">
        <div>
          <label for="name" class="sr-only">Full Name</label>
          <input
            id="name"
            name="name"
            type="text"
            class="appearance-none rounded-lg relative block w-full px-3 py-3 border placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm border-gray-300"
            placeholder="Full Name"
          />
          <p id="error-name" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="email" class="sr-only">Email address</label>
          <input
            id="email"
            name="email"
            type="email"
            class="appearance-none rounded-lg relative block w-full px-3 py-3 border placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm border-gray-300"
            placeholder="Email address"
          />
          <p id="error-email" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="password" class="sr-only">Password</label>
          <input
            id="password"
            name="password"
            type="password"
            class="appearance-none rounded-lg relative block w-full px-3 py-3 border placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm border-gray-300"
            placeholder="Password"
          />
          <p id="error-password" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>

        <div>
          <label for="confirmPassword" class="sr-only">Confirm Password</label>
          <input
            id="confirmPassword"
            name="confirmPassword"
            type="password"
            class="appearance-none rounded-lg relative block w-full px-3 py-3 border placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm border-gray-300"
            placeholder="Confirm Password"
          />
          <p id="error-confirmPassword" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>
      </div>

      <div>
        {{ ui.button('Sign up', 'primary', 'w-full py-3 px-4 text-sm cursor-pointer hover:scale-105') }}
      </div>
      <p class="mt-2 text-center text-sm text-gray-600">
        Already have an account?
        <a href="/auth/login" class="font-medium text-blue-600 hover:text-blue-500 cursor-pointer">Sign in</a>
      </p>
    </form>
  </div>
</div>
{# Toastify for notifications (optional, falls back to console logs if absent) #}
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/assets/js/auth.js"></script>
<script src="/assets/js/signup.js"></script>
{% endblock %}
