{% extends "base.html.twig" %}
{% import 'components/button.html.twig' as ui %}
{% import 'components/card.html.twig' as card %}
{% block title %}Welcome to TicketDash {% endblock %}
{% block content %}
<div class="min-h-screen bg-linear-to-b from-blue-50 to-white">
  <nav class="top-0 left-0 w-full bg-white/45 z-20 relative shadow-sm">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center h-16">
        <div class="shrink-0 flex items-center">
          <svg
            class="h-8 w-8 text-blue-600"
            viewBox="0 0 24 24"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
            />
          </svg>
          <span class="ml-2 text-xl font-bold text-gray-900">
            TicketDash
          </span>
        </div>
      </div>
    </div>
  </nav>

  <div class="absolute top-10 sm:top-0 left-0 w-full opacity-50 overflow-hidden z-0">
    <svg
      viewBox="0 0 1440 320"
      class="w-full h-auto"
      preserveAspectRatio="none"
    >
      <path
        fill="#3b82f6"
        fill-opacity="0.1"
        d="M0,192L48,197.3C96,203,192,213,288,229.3C384,245,480,267,576,250.7C672,235,768,181,864,181.3C960,181,1056,235,1152,234.7C1248,235,1344,181,1392,154.7L1440,128L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"
      ></path>
    </svg>
  </div>

  <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 relative z-20">
    <header class="pt-12 pb-16 text-center">
      <h1
        class="text-5xl md:text-6xl font-extrabold mb-6 bg-clip-text text-transparent bg-linear-to-r from-blue-600 to-indigo-600"
      >
        TicketDash
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Revolutionize your support workflow with our powerful, intuitive
        ticket management solution. Streamline operations and boost team
        productivity instantly.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <form action="/auth/signup" method="get">
          {{ ui.button('Get Started', 'primary', 'w-full sm:w-auto px-8 py-3 text-lg cursor-pointer hover:scale-105') }}
        </form>
        <form action="/auth/login" method="get">
          {{ ui.button('Login', 'outline', 'w-full sm:w-auto px-10 py-3 text-lg cursor-pointer hover:scale-105 hover:bg-blue-500 hover:text-white') }}
        </form>
      </div>
    </header>

    <section class="relative py-20 min-h-[70vh] flex items-center">
      <div
        class="absolute -top-10 -left-10 w-40 h-40 bg-blue-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"
      ></div>
      <div
        class="absolute top-1/3 right-20 w-32 h-32 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"
      ></div>
      <div
        class="absolute bottom-0 left-1/3 w-48 h-48 bg-pink-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"
      ></div>

      <div
        class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
      >
        <div class="text-left">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">
            Smarter Ticket Management <br />
            <span class="text-blue-600">Made Simple</span>
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Experience the next generation of ticket management with our
            intuitive platform. Designed for teams of all sizes to track,
            prioritize, and resolve issues faster than ever.
          </p>
          <div class="flex flex-wrap gap-4">
            {{ ui.button('Start Free Trial', 'primary', 'w-full sm:w-auto px-6 py-3  cursor-pointer hover:scale-105') }}
            {{ ui.button('Watch Demo', 'outline', 'w-full sm:w-auto px-6 py-3 cursor-pointer hover:scale-105 hover:bg-blue-500 hover:text-white') }}
          </div>
        </div>

        {{ card.card(
          'Team Collaboration',
          '<div class="mb-6">Work together seamlessly with your team on support tickets, with real-time updates and notifications.</div>' ~
          '<ul class="space-y-3">' ~
            '<li class="flex items-center">\n<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Real-time ticket updates</li>' ~
            '<li class="flex items-center">\n<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Team assignment & collaboration</li>' ~
            '<li class="flex items-center">\n<svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Performance analytics</li>' ~
          '</ul>',
          '<svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20"><path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z"/></svg>',
          'p-8 rounded-2xl shadow-xl border border-gray-100 transform hover:scale-[1.02] transition-transform duration-300'
        ) }}
      </div>
    </section>
  </div>
</div>
  {% include 'components/footer.html.twig' %}
{% endblock %}
