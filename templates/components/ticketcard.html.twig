<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-medium leading-6 text-gray-900">
        {{ ticket.title }}
      </h3>
      <div class="flex space-x-2">
        <button
          onclick="handleEdit('{{ ticket.id }}')"
          class="text-gray-400 hover:text-blue-500"
          title="Edit ticket"
        >
          <!-- Edit Icon -->
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"
            />
          </svg>
        </button>
        <button
          onclick="handleDelete('{{ ticket.id }}')"
          class="text-gray-400 hover:text-red-500"
          title="Delete ticket"
        >
          <!-- Delete Icon -->
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
      </div>
    </div>

    {% if ticket.description %}
      <p class="mt-2 text-sm text-gray-600 line-clamp-3">
        {{ ticket.description }}
      </p>
    {% endif %}

    <div class="mt-4 flex flex-wrap gap-2">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ getStatusClass(ticket.status) }}">
        {{ ticket.status|replace({'_':' '})|capitalize }}
      </span>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ getPriorityClass(ticket.priority) }}">
        {{ ticket.priority|capitalize }}
      </span>
    </div>

    <div class="mt-4 text-xs text-gray-500">
      Created: {{ ticket.createdAt|date("M d, Y") }}
    </div>
  </div>
</div>